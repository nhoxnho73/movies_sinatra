<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert"> 
  <p class="text-center"><%= flash[:alert] %></p>
  </div>
<% end %>
<% if flash[:info] %>
  <div class="alert alert-info" role="alert"> 
  <p class="text-center"><%= flash[:info] %></p>
  </div>
<% end %>

<h1>Listing users</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Name</strong></td>

    </tr>
  <% @users.each do |user| %>
    <tr>

      <td><%= user.username %></td>
      
      <td><a class="btn btn-info btn-xs" href="/users/<%= user.id %>"> Show</span></a></td>
      
    </tr>
  <% end %>
  </tbody>
</table>
